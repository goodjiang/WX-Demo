#box{
  width: 100%;
  height: 0;
  overflow: hidden;
 animation-fill-mode: forwards;
}
@keyframes slidedown{
  from {
    height: 0
  }
  to {
    height: 240rpx
  }
}
@keyframes slideup{
  from {
    height: 240rpx;
  }
  to {
    height: 0
  }
}

.open{
  animation: slidedown 1s
}
.close{
  animation: slideup 1s; 
}
.hide{
  display: none;
}
.show{
  display: block;
}


